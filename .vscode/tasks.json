{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install updated dependencies (pnpm)",
			"type": "shell",
			"command": "pnpm install",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Start dev server",
			"type": "shell",
			"command": "pnpm run dev",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		}
	]
}